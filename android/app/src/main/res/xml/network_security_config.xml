<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for development and specific domains -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Explicitly allow all required domains -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">snowmediaapps.com</domain>
        <domain includeSubdomains="true">lovableproject.com</domain>
        <domain includeSubdomains="true">lovable.app</domain>
        <domain includeSubdomains="true">supabase.co</domain>
        <domain includeSubdomains="true">falmwzhvxoefvkfsiylp.supabase.co</domain>
        <domain includeSubdomains="true">vimeo.com</domain>
        <domain includeSubdomains="true">vimeocdn.com</domain>
        <domain includeSubdomains="true">wixstatic.com</domain>
        <domain includeSubdomains="true">wix.com</domain>
        <domain includeSubdomains="true">wixapis.com</domain>
        <domain includeSubdomains="true">corsproxy.io</domain>
        <domain includeSubdomains="true">allorigins.win</domain>
    </domain-config>
</network-security-config>