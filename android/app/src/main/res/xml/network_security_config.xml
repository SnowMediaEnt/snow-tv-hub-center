<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for development and specific domains -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Explicitly allow HTTP for snowmediaapps.com -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">snowmediaapps.com</domain>
        <domain includeSubdomains="true">lovableproject.com</domain>
        <domain includeSubdomains="true">lovable.app</domain>
    </domain-config>
</network-security-config>